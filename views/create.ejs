<!DOCTYPE html>
<html lang="en">
<head>

<!-- Bootstrap CSS CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Bootstrap Bundle JS CDN (includes Popper) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <meta charset="UTF-8">
  <title>Create New Hisaab</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-100 font-[Helvetica]">

  <!-- Navbar -->
  <nav class="flex px-10 justify-between py-5 bg-white shadow">
    <h3 class="text-2xl tracking-tight font-semibold">Khaatabook</h3>
    <div class="flex gap-5 items-center">
      <a href="/" class="text-blue-600 hover:underline">Home</a>
      <a href="/create" class="text-blue-600 hover:underline">Create New Hisaab</a>
    </div>
  </nav>

  <!-- Create Note Form -->
  <div class="px-10 mt-10">
    <h3 class="text-2xl font-medium mb-5">Create New Hisaab</h3>

    <form action="/createhisaab" method="POST" class="space-y-5 w-full max-w-xl">
      <!-- Title -->
      <input
        name="title"
        type="text"
        placeholder="Note Title"
        required
        class="w-full px-4 py-2 rounded-md bg-zinc-200 text-lg"
      >

      <!-- Note Body -->
      <textarea
        name="content"
        placeholder="Write your note..."
        required
        class="w-full min-h-60 px-4 py-2 resize-none bg-zinc-200 rounded-md text-base"
      ></textarea>

      <!-- Optional Password -->
      <input
        name="password"
        type="password"
        placeholder="Set a password (optional)"
        class="w-full px-4 py-2 rounded-md bg-zinc-200 text-base"
      >

      <!-- Submit -->
      <input
        type="submit"
        value="Save Hisaab"
        class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-md cursor-pointer text-lg"
      >
    </form>
  </div>
</body>
</html>
