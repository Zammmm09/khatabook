<!DOCTYPE html>
<html lang="en">
<head>

<!-- Bootstrap CSS CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Bootstrap Bundle JS CDN (includes Popper) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <meta charset="UTF-8">
  <title>Your Hisaabs - Khatabook</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-100 font-[Helvetica]">

  <!-- Navbar -->
  <nav class="flex px-10 justify-between py-5 bg-white shadow">
    <h3 class="text-2xl tracking-tight font-semibold">Khaatabook</h3>
    <div class="flex gap-5 items-center">
      <a href="/" class="text-blue-600 hover:underline">Home</a>
      <a href="/create" class="text-blue-600 hover:underline">Create New Hisaab</a>
      <% if (session && session.userId) { %>
        <a href="/logout" class="text-red-600 hover:underline">Logout</a>
      <% } else { %>
        <a href="/login" class="text-blue-600 hover:underline">Login</a>
        <a href="/register" class="text-blue-600 hover:underline">Register</a>
      <% } %>
    </div>
  </nav>

  <!-- Notes List -->
  <div class="px-10 mt-10">
    <h3 class="text-2xl font-medium mb-6">Your Hisaabs</h3>

    <% if (files.length === 0) { %>
      <p class="text-zinc-500">You haven't added any notes yet.</p>
    <% } else { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% files.forEach(note => { %>
          <div class="bg-white rounded-lg shadow p-5 space-y-3">
            <h4 class="text-xl font-semibold text-blue-700"><%= note.title %></h4>
            <p class="text-sm text-zinc-500">Created: <%= new Date(note.createdAt).toLocaleDateString() %></p>

            <!-- Share/Access Buttons -->
            <div class="flex flex-wrap justify-end gap-3 mt-4 text-sm">
              <a href="/hisaab/<%= note._id %>" class="text-blue-600 hover:underline">Open</a>
              <a href="/edit/<%= note._id %>" class="text-green-600 hover:underline">Edit</a>
              <a href="/delete/<%= note._id %>" class="text-red-600 hover:underline">Delete</a>

              <% if (!note.password) { %>
                <a href="/shared/<%= note._id %>" class="text-purple-600 hover:underline">Share</a>
              <% } else { %>
                <span class="text-gray-400 italic cursor-not-allowed">Remove password to share</span>
              <% } %>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

</body>
</html>
